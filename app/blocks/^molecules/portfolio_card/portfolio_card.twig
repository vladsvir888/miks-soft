<article class="portfolio-card">
  <div class="portfolio-card__content">
    {% if portfolio_card.title %}
      <h2 class="portfolio-card__title">
        {{ portfolio_card.title }}
      </h2>
    {% endif %}

    {% if portfolio_card.labels %}
      <ul class="portfolio-card__list">
        {% for item in portfolio_card.labels %}
          {% view "@label" with {
            label: item
          } %}
        {% endfor %}
      </ul>
    {% endif %}

    {% if portfolio_card.text %}
      <p class="portfolio-card__text">
        {{ portfolio_card.text }}
      </p>
    {% endif %}

