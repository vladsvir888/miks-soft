<div class="hero-inner main__section">
  <div class="container">
    <div class="hero-inner__wrap">
      {% if hero_inner.uptitle %}
        {% view "@title" with {
            title: hero_inner.uptitle|default({})|merge({
                class: "js-title hero-inner__title hero-inner__title--big"
            })
        } %}
      {% endif %}

      {% if hero_inner.video %}
        <div class="hero-inner__video">
          <video src="{{ hero_inner.video.path }}" preload="metadata" autoplay="autoplay" loop muted playsinline></video>
        </div>
      {% endif %}

      {% if hero_inner.text %}
        <p class="hero-inner__text">{{ hero_inner.text }}</p>
      {% endif %}

      {% if hero_inner.title %}
        {% view "@title" with {
          title: hero_inner.title|default({})|merge({
            class: "js-title hero-inner__title hero-inner__title--small"
          })
        } %}
      {% endif %}

      {% if hero_inner.subtitle %}
        <p class="hero-inner__subtitle">
          {{ hero_inner.subtitle }}
        </p>
      {% endif %}
    </div>
  </div>
</div>