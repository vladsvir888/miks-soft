<div class="hero main__section">
  {% if hero.video %}
    <div class="hero__video">
      <video src="{{ hero.video.path }}" autoplay="autoplay" loop muted playsinline pip="false"></video>
    </div>
  {% endif %}

  <div class="container hero__container">
    {% if hero.title %}
      {% view "@title" with {
        title: hero.title|default({})|merge({
          attrs: 'data-sal="slide-up" data-sal-duration="800"',
          class: "title--h1 js-title hero__title"
        })
      } %}
    {% endif %}

    {% if hero.labels.items %}
      {% view "^tags" with {
        tags: hero.labels|default({})|merge({
          class: "hero__list"
        })
      } %}
    {% endif %}

    {% if hero.text %}
      <p data-sal="slide-up" data-sal-duration="800" data-sal-delay="800" class="hero__text">
        {{ hero.text }}
      </p>
    {% endif %}

    {% if hero.button %}
      {% view "@button" with {
        button: hero.button|default({})|merge({
          class: "btn--secondary hero__btn js-modal-btn",
          icon: {
            name: "sprite-mono.svg#btn-figure"
          }
        })
      } %}
    {% endif %}

    {% if hero.awards %}
      <ul class="hero__awards">
        {% for item in hero.awards.items %}
          <li {% if item.attrs %}{{ item.attrs }}{% endif %}>
            <img
              class="lazy hero__awards-img"
              src="./assets/images/pixel.png"
              data-src="{{ item.path }}"
              alt="{{ item.text }}"
            >
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>