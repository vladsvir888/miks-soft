<section class="portfolio">
  <div class="container">
    <div class="portfolio__inner offset-y">
      {% if portfolio.tabs_nav %}
        {% view "^tabs_nav" with {
          tabs_nav: portfolio.tabs_nav
        } %}
      {% endif %}

      {% if portfolio.note %}
        <p class="portfolio__note">
          <small>
            {{ portfolio.note }}
          </small>
        </p>
      {% endif %}

      {% if portfolio.items %}
        <ul class="portfolio__list">
          {% for item in portfolio.items %}
            <li class="portfolio__item">
              {% view "^portfolio_card" with {
                portfolio_card: item
              } %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</section>